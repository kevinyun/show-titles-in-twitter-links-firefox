{
  "manifest_version": 2,
  "name": "Show Titles in Twitter Links",
  "version": "1.6",
  "description": "Show titles in articles and URLs shared on Twitter.",
  "permissions": ["https://twitter.com/*", "https://x.com/*"],
  "browser_specific_settings": {
    "gecko": {
      "id": "show-titles-in-x@example.com"
    }
  },
  "content_scripts": [{
    "matches": ["https://twitter.com/*", "https://x.com/*"],
    "js": ["content.js"]
  }]
}